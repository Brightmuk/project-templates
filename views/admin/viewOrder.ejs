    <style>
      .car-image{
        width: 400px;
        border-radius: 10px;
      }
      .car-header{
        display: flex;
        justify-content: space-between;
      }
      .header-right{
        align-items: baseline;
        font-size: 14px;
        
      }
      .header-right .item{
        display: flex;
        color: grey;
        justify-content: space-between;
      }

      progress{
       
        width: 70px;
      }
      .action-row{
        display: flex;
        justify-content: space-between;
      }
      .logo img{
    width: 70px;
    border-radius: 70%;
  }
  .logo{
    margin-right: 10px;
  }
  .order{
    border: 1px solid rgb(230, 230, 230);
    padding: 10px;
    border-radius: 5px;
    display: flex;
