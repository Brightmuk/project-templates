    <div class="content-wrapper">
      
      <div class="container-fluid">
        <% if(msg) { %>
          <h3 style="color: #17b978;" class="text-center"><%=msg%></h3><br>
          <%   } %>
          <% if(err) { %>
          <h3 style="color: #ff304f;" class="text-center"><%=err%></h3><br>
          <%   } %>
          
            
          <div class="room mb-50">
                                        
                                      
            <div class="order ">
                
                <div class="left">
                    <h3 class="">order#<%=order.id%></h3>
                    <h5><%=order.status%></h5>
                    <div class="per-night">
                        
                        <h5>ksh. <%=order.price%> </h5>
                        <br>
                        Created on: <small> <%=order.date%> </small>
                    </div> 
                </div>
                <div class="right">
                    <% if(order.status==" submitted ") { %>
                    <form action="/admin/fulfill" method="POST">
                        <input hidden value="<%=order.id%>" name="id">
                    <input type="submit"  class="btn btn-lg btn-success mt-3 add-room-btn" value="Fulfill order">
                    </form>
                    <%   } %>
                </div>             
            </div>
            <br>
            <h3>Order Items</h3>
            <% if(flowers.length) { %>
                        
                <% for(i=0;i<flowers.length;i++){  %>
                    

                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <!-- Single Room -->
                        
                   

                            <input id="carId" type="text" name="flowerId" value="<%=flowers[i].id%>" hidden>
                            
                            <div class="single-item mb-50">
                                <div class="id"><%=i+1%></div>
                                <div class="room-img p-2">        
                                        <a href="#"><img class="car-img" src="<%=flowers[i].image%>" alt="" height="200px"></a>
                                </div>
                              
                                <div class="room-caption ">

                                   
                                    <h3><%=flowers[i].name%></h3>
                                    <h5><%=flowers[i].type%></h5>

                                    
                                </div>
                              <div class="pricing">
                                  
                                
                                    <span>ksh. <%=flowers[i].price%> </span>
                                
                              </div>
                              

                            </div>
<br>
                    
                    
                </div>
                
                <% } %>

                <br>
             

                <% } else{  %>
              <br>
            
        <div class="col-lg-12 col-md-12 col-sm-12">
              <h2 style="color: #ff304f;" class="text-center mt-5 mb-5">No items in order</h2>
        </div>
            <br>
            <%  }  %>
          

        </div>

      </div>
