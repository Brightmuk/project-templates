          <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Charts">
            <a class="nav-link" href="/admin/cars">
              <i class="fa fa-fw fa-area-chart"></i>
              <span class="nav-link-text">Flowers</span>
            </a>
          </li>
  
          <li class="nav-item nav-item-active" data-toggle="tooltip" data-placement="right" title="Tables">
            <a class="nav-link" href="/admin/addCar">
