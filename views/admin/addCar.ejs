  <script>
    function next(){
      document.getElementById("form-next-right").style.display="inline";
      document.getElementById("form-next-left").style.display="inline";
      document.getElementById("form-left").style.display="none";
      document.getElementById("form-right").style.display="none";
    }
    function prev(){
      document.getElementById("form-next-right").style.display="none";
      document.getElementById("form-next-left").style.display="none";
      document.getElementById("form-left").style.display="inline";
      document.getElementById("form-right").style.display="inline";
    }

  </script>
