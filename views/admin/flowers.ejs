        <div class="card mb-3">
          <div class="card-header">

            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
                  <% if(flowers.length) {  %>
                  <thead class="bg-primary text-white">
                    <tr>
                      <th>No.</th>
                      <th>Type</th>
                      <th>Name</th>
                      <th>Price</th>
                      <th>Quantity</th>
                      
                      <th>Rating</th>
                      <th>Actions</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% for (i in flowers) { %>
                    <tr>
                      <td><%=i%></td>
                      <td><%=flowers[i].type%></td>
                      <td><%=flowers[i].name%></td>
                      <td><%=flowers[i].price%></td>
    
                      <td><%=flowers[i].quantity%></td>
                      
                      <td><%=flowers[i].rating%></td>


                      <th>
                      <form action="/admin/viewFlower" method="POST">
                        <input type="hidden" name="id" value="<%=flowers[i].id%>">
                        <input type="submit" class="btn btn-info btn-ml" name="click" value="View">
                       
                      </form>
                      </th>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
                <%   } else { %>
                <h3 style="color: #ff304f;" class="text-center">No Data Found</h3><br>
