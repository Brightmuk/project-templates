    <div class="content-wrapper">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-4 ">
            <br>
            <br>
            <% if(msg) { %>
            <h3 style="color: #17b978;" class="text-center"><%=msg%></h3><br>
            <%   } %>
            <% if(err) { %>
            <h3 style="color: #ff304f;" class="text-center"><%=err%></h3><br>
            <%   } %>
            <form class="add-room" action="/admin/addFlower" method="POST" enctype="multipart/form-data">
              <div class="form-left" id="form-left">
                <p>Type</p>
                <select name="type" class="form-control" required>
                  <option value="Hamper">Hamper</option>
                  <option value="Plant">Plant</option>
                  <option value="Romantic">Romantic</option>
                  <option value="Bouquet">Bouquet</option>
                  
              </select>
                
              <br>
              <p>Name</p>
              <input type="text" class="form-control" name="name" >
              <br>
              <p>Color</p>
              <select class="form-control"  name="color">
                  <option value="red">Red</option>
                  <option value="red">Pink</option>
                  <option value="yellow">Yellow</option>
                  <option value="mixed">Mixed</option>
                  <option value="red-white">Red-white</option>
                  <option value="red-yellow">Red-yellow</option>
                  <option value="white-purple">White-purple</option>
              </select>
              
            <br>
                <p>Stock</p>
                <input type="number" class="form-control" name="quantity" placeholder="Quantity">
                <br>
                <p>Price</p>
                <input type="number" class="form-control" name="price" placeholder="ksh" required>
                <br>

                <p>Image</p>
                <input type="file" class="form-control" name="image" placeholder="Add Image" required>
                <br>
                <input type="submit"  class="btn btn-lg btn-success mt-3 add-room-btn" value="Add Flower">
              </div>

            </form>
          </div>
        </div>

      </div>
