    }
    .btn-warning:hover{
        background-color: rgb(122, 83, 9);
    }
    .car-img{
        object-fit: cover;
    }
    #toast {
        position: fixed; z-index: 99;
        top: 100px; right: 5px;
        width: 200px;
        padding: 10px;
        border: 1px solid #c1cafc;
        border-radius: 5px;
        color: white;
        background: #e4a228;
        border: 1px solid rgb(221, 221, 221);
        display: none;
        animation-duration: 2s;
        font-size: 12px;
    }

    .logo a{
    color: purple;
    font-weight: bold;
}
.btn-cart{
    height: 50px;
    padding: 15px;
}
.btn-cart i{
    font-size: 20px;
}
.single-room{
    display: flex;
    width: 100%;
    height: 120px;
    justify-content: space-between;

    box-shadow: none;
    border-bottom: 1px solid rgb(243, 243, 243);
}
.single-room:hover{
    border: none;
    transform: none;
}
.room-caption{
    width: 50%;
    border: none;
}

