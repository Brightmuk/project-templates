    <script>



        function addToCart(carId){
            var cart = localStorage.getItem('cart')??'0';
            var id =JSON.parse(carId);
            if(cart.includes(id)){
                var arr = cart.split(',');
                var index = arr.indexOf(id);
                arr.splice(index,1);

                localStorage.setItem('cart',arr.join());
                toast("Removed from cart");
            }else{
                var arr = cart.split(',');
                arr.push(id);
                localStorage.setItem('cart',arr.join());
                toast("Added to cart");
            };

        }


        function toast (msg) {
            document.getElementById('toast').innerHTML=msg
            $(document).ready(function(){
                $("#toast").fadeTo("slow", 1.0);
                $("#toast").fadeTo("slow", 1.0);
                $("#toast").fadeTo("slow", 0.0);
               
            });
        }
        function cart(){
            
            var cartForm = document.getElementById("cartForm");
            var inputField = document.getElementById("cart-values");
            inputField.value = localStorage.getItem('cart');
            console.log(inputField.value);
            cartForm.submit();
            
        }
    </script>

