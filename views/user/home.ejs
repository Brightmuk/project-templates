    <main>
        <section class="room-area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-lg-12 col-sm-12 col-12 ">
                        <!--font-back-tittle  -->
                        <div class="font-back-tittle ">
                            
                                <form action="/filter" method="POST" class="filter">
                              <div class="row" >
                
                                 
                                    <div class="">
                                      <div class="selectone">
                                       <p>Type</p>
                                       <select name="type">
                                           <option value="For Sale">For Sale</option>
                                           <option value="For Rent">For Rent</option>
                                           
                                       </select>
                                     </div>
                                    <div class="selectone ml-3">
                                         <p>Category</p>
                                       <select name="category">
                                           <option value="Apartment">Apartment</option>
                                           <option value="Land">Land</option>
                                           <option value="House">House</option>
                                           <option value="Commercial Property">Commercial Property</option>
                                       </select>
                
                                     </div>
                                     <div class="selectone ml-3">
                                        <p>Location</p>
                                      <select name="location">
                                          <option value="Ruiru">Ruiru</option>
                                          <option value="Kiambu">Kiambu</option>
                                          <option value="Kileleshwa">Kileleshwa</option>
                                          <option value="Ruai">Ruai</option>
                                          <option value="Runda">Runda</option>
                                          <option value="Allsops">Allsops</option>
                                          <option value="Utawala">Utawala</option>
                                      </select>
                
                                    </div>
                                     <div class="selectone ml-3">
                                        <p>Max Price</p>
                                      <input type="number" name="price">
                
                                    </div>
                                    </div>
                
                               <input type="submit" value="Search" class="btn btn-info btn-sm positionbtn ml-3">
                
                        </form>
                              
                        </div>
                    </div>

                    <% if(properties.length) { %>
                    <% for(i=0;i<properties.length;i++){  %>


                    <div class="col-xl-12 col-lg-12 col-md-12 col-12">
                        <!-- Single Room -->
                        <form action="/viewProperty" method="POST">
                            <input type="text" name="name" value="<%=properties[i].name%>" hidden>
                            

                            <div class="single-room mb-50">
                                <div class="room-img p-2">        
                                        <a href="#"><img src="<%=properties[i].img%>" alt="" height="200px"></a>
                                </div>
                                <div class="room-caption text-center">

                                    <h3><a href="#"><%=properties[i].type%></a></h3>
                                    <h5><%=properties[i].dec%></h5>
                                    <div class="per-night">
                                        <span> Ksh. <%=properties[i].price%> <span></span></span>
                                    </div>
                                    <br>
                                    <input type="submit" class="btn btn-danger" value="View Property">
                                </div>
                            </div>

                    </div>
                    </form>
                    <% } %>
                    <% } else{  %>
                      <br>
                <div class="col-lg-12 col-md-12 col-sm-12">
                      <h2 style="color: #ff304f;" class="text-center mt-5 mb-5">No Results matched the search</h2>
                </div>
                    <br>
                    <%  }  %>

                </div>
            </div>

        </section>
        
        <!-- Gallery img End-->
    </main>
