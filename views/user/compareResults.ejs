        <div class="header-area header-sticky">
            <div class="main-header ">
                <div class="container">
                    <div class="row align-items-center">
                        <!-- logo -->
                        <div class="col-xl-2 col-lg-2">
                            <div class="logo">
                                <a href="/"><img src="/assets/img/logo/logo.png" alt="">Flora Joy</a>
                            </div>
                        </div>
                        <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10">
                            <!-- main-menu -->
                            <div class="main-menu f-right d-none d-lg-block">
                                <nav>
                                    <ul id="navigation">
                                        <li><a href="/">Home</a></li>                                      
                                        <li><a href="/search">Search</a></li>
                                     
                                        <li><a href="/about">About</a></li>
                                        <li><a href="/contact">Contact</a></li>
                                        <% if(user==null) { %>
                                            <a href="/login">
                                                <input type="submit" class="btn btn-login" value="Login">
                                                </a>
                                      <%   }else{ %>
                                        <a href="/account">
                                            <input type="submit" class="btn btn-login" value="Account">
                                            </a>
                                            <a href="/cart">
                        
                                                <button class="btn btn-cart"><i class="fa fa-shopping-cart"></i></button>
                                                </a>
                                        <% }%>
                                    </form>
                                    </ul>
                                    
                                </nav>
                                
                            </div>
                        </div>
                    
                        <!-- Mobile Menu -->
                        <div class="col-12">
                            <div class="mobile_menu d-block d-lg-none"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Header End -->
    </header>
    <main>


        <!-- Room Start -->
        <section class="room-area">
            <div class="container">
                <div class="row compare-view">
                    <div class="col-lg-12 col-lg-12 col-sm-12 col-12">
                        <!--font-back-tittle  -->
                        <div class="font-back-tittle mb-45">
                            <div class="archivment-front">
                                <h3>Compare</h3>
                            </div>
                            <h3 class="archivment-back">Best Match</h3>
                        </div>
                    </div>

                    <% if(cars.length) { %>
                        
                    <% for(i=0;i<cars.length;i++){  %>


                    <div class="col-5  car">
                        <!-- Single Room -->
                        <form action="/viewCar" method="POST">
                            <input id="carId" type="text" name="carId" value="<%=cars[i].id%>" hidden>

                            <div class="single-room mb-10">
                                <div class="room-img p-1">        
                                        <a href="#"><img class="car-img" src="<%=cars[i].image%>" alt="" height="200px"></a>
                                </div>
                                <div class="room-caption text-center">

                                    <h3><a href="#"><%=cars[i].make%></a></h3>
                                    <h5><%=cars[i].model%></h5>
                                    <div class="per-night">
                                        <span>ksh. <%=cars[i].price%></span>
                                    </div>
                                    <input type="submit" class="btn btn-danger" value="View">
                                    
                                </div>
                            </div>

                    
                    </form>
                    
                    <div class=" single-room car-extras">
                        <h5 class="feature">Reliability</h5>
                        <h5 class="value"><%=cars[i].reliability%></h5>
                    </div>
                    <hr>
                    <div class="car-extras">
                        <h5 class="feature">Economy</h5>
                        <h5 class="value"><%=cars[i].economy%></h5>
                    </div>
                    <hr>
                    <div class="car-extras">
                        <h5 class="feature">Perfromance</h5>
                        <h5 class="value"><%=cars[i].performance%></h5>
                    </div>
                    <hr>
                    <div class="car-extras">
                        <h5 class="feature">Luxury</h5>
                        
                        <h5 class="value"><%=cars[i].luxury%></h5>
                    </div>
                    <hr>
                    <div class="car-extras">
                        <h5 class="feature">Utility</h5>
                        <h5 class="value"><%=cars[i].Utility%></h5>
                    </div>
                    <hr>
                </div>
                <div class="divider"></div>
                
                    <% } %>
           
                    <% } else{  %>
                      <br>
                <div class="col-lg-12 col-md-12 col-sm-12">
                      <h2 style="color: #ff304f;" class="text-center mt-5 mb-5">No results match the search</h2>
                </div>
                    <br>
                    <%  }  %>

                </div>
                <hr>
                <h3>Best recommendation</h3>
                <br>
                <div class="recommendation">                   
                    <img class="img-col" src="<%=bestOffer.image%>">
                    
                    <div class="info-col">
                        <h5 class="name"><%=bestOffer.make%> <%=bestOffer.model%> <%=bestOffer.year%></h5>
                        <h5 >Based on your requirements, this will the best recommendation for you</h5>
                        <h4 class="purpose"><%=purpose%></h4>
                    </div>
                </div>
                <br>
                <br>
            </div>
        </section>
        <!-- Room End -->
    </main>
    <footer>
        <!-- Footer Start-->
