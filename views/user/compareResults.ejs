<style>
    .comparison{
    background-color: rgb(37, 37, 73);
  padding: 20px;
  color: white;

    }
    .btn-warning{
        background-color: rgb(65, 55, 38);
    }
    .btn-warning:hover{
        background-color: rgb(122, 83, 9);
    }
    .compare-view{
        justify-content: space-between;
    }
    .divider{
        height: 120vh;
        width: 1px;
        background-color: rgb(209, 209, 209);
    }
    .divider:last-child{
        display: none;
    }
    .car{
      width: 100px;
      margin:0px
    }
    .car-extras{
        width: 100%;
        display: flex;
        justify-content: space-between;
    }
    .car-img{
        object-fit: cover;
    }
    .recommendation{
  display: flex;
  height: 150px;
  padding: 10px;
  border: 1px solid rgb(216, 216, 216);
  border-radius: 20px;
  background-color: rgb(240, 245, 255);
}
.recommendation .img-col{
  margin-right: 10px;
  border-radius: 5px;
  
}
.recommendation img{
  object-fit: cover;
}
.recommendation .name{
    font-size: 30px;
    font-weight: bold;
    color: rgb(40, 40, 63);
}
.purpose{
    color: grey;
}
.logo a{
    color: purple;
    font-weight: bold;
}
.btn-cart{
    height: 50px;
    padding: 15px;
}
.btn-cart i{
    font-size: 20px;
}
</style>
<body>

    <!-- Preloader Start -->
